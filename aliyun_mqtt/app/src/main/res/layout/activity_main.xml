<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#F5F7FA"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/status_bg">  <!-- 添加背景选择器 -->

        <ImageView
            android:id="@+id/iv_computer_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_computer_off"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_computer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电脑状态：未开机"
            android:textColor="#FF5252"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- 美化后的时间显示卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/time_card_bg"
            android:padding="2dp"
            android:gravity="center">

            <!-- 日期显示 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="8dp"
                    app:tint="#6A7FDB" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023年10月25日"
                    android:textColor="#6A7FDB"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"/>
            </LinearLayout>

            <!-- 时钟模拟效果 -->
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginVertical="16dp"
                android:clipChildren="false"> <!-- 重要：允许子视图超出边界 -->

                <!-- 时钟背景 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/clock_bg"
                    android:layout_centerInParent="true"/>

                <!-- 时针 -->
                <View
                    android:id="@+id/hour_hand"
                    android:layout_width="4dp"
                    android:layout_height="45dp"
                    android:background="#4A4E69"
                    android:layout_centerInParent="true"
                    android:rotation="0"
                    android:pivotX="0.5"
                    android:pivotY="1.0"/> <!-- 底部中心为旋转点 -->

                <!-- 分针 -->
                <View
                    android:id="@+id/minute_hand"
                    android:layout_width="3dp"
                    android:layout_height="60dp"
                    android:background="#4A4E69"
                    android:layout_centerInParent="true"
                    android:rotation="0"
                    android:pivotX="0.5"
                    android:pivotY="1.0"/> <!-- 底部中心为旋转点 -->

                <!-- 秒针（带动画） -->
                <View
                    android:id="@+id/second_hand"
                    android:layout_width="2dp"
                    android:layout_height="70dp"
                    android:background="#FF6B6B"
                    android:layout_centerInParent="true"
                    android:rotation="0"
                    android:pivotX="0.5"
                    android:pivotY="1.0"/> <!-- 底部中心为旋转点 -->

                <!-- 中心点 -->
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_bg"/>
            </RelativeLayout>

            <!-- 数字时间显示 -->
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30:45"
                android:textColor="#4A4E69"
                android:textSize="36sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_marginTop="8dp"/>

            <!-- 星期显示 -->
            <TextView
                android:id="@+id/tv_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期三"
                android:textColor="#6A7FDB"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 开机圆形按钮 -->
        <ImageButton
            android:id="@+id/btn_open"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/on"
            android:contentDescription="@string/btn_open_desc"
            android:background="@drawable/btn_circle_green"
            android:scaleType="fitCenter"
            android:stateListAnimator="@null"/>

        <Space
            android:layout_width="100dp"
            android:layout_height="0dp"/>

        <!-- 关机圆形按钮 -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/off"
            android:contentDescription="@string/btn_close_desc"
            android:background="@drawable/btn_circle_red"
            android:scaleType="fitCenter"
            android:stateListAnimator="@null"/>
    </LinearLayout>

    <!-- 状态指示器 -->
    <!-- 新增：图片显示区域 -->
    <LinearLayout
        android:id="@+id/status_connection_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/connection_status_bg">  <!-- 使用新的背景选择器 -->

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接阿里云状态：未连接"
            android:textColor="@color/connection_status_text"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <!-- 使用FrameLayout实现带阴影的圆角图片 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- 图片显示 -->
            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/beij"
                android:scaleType="centerCrop"/>

            <!-- 可选：添加半透明遮罩使图片更融合 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#22000000"/>  <!-- 15%黑色遮罩 -->
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>